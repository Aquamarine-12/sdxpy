    <script src="@root/remark-latest.min.js"></script>
    <script>
      var slideshow = remark.create({
        highlightLines: true
      })
      all_slides = [...document.querySelectorAll("div.remark-slide-container")]
      all_slides.forEach((slide, i) => {
        slide.classList.add("remark-visible")
        slider = slide.querySelector("div.remark-slide-scaler")
	body = slide.querySelector("div.remark-slide")
	number = slide.querySelector("div.remark-slide-number")
        console.log(`${i}: ${slider.offsetHeight} <=> ${body.offsetHeight} (${number.textContent})`)
        slide.classList.remove("remark-visible")
      })
      all_slides[0].classList.add("remark-visible")
    </script>
